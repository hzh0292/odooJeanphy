<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="course_form_view">
        <field name="name">course.form</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form string="课程表单">
                <sheet>
                    <div class="oe_title">
                        <label for="名称" class="oe_edit_only" string="课程名"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                     <button name="action_confirm"
                        string="确认课表" type="object" class="oe_highlight"/>
                    <group colspan="2" col="2">
                        <field name="description" string="课程描述"/>
                    </group>
                    <group>
                        <field name="responsible_id" string="负责人"/>
                    </group>
                </sheet>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="responsible_id"/>
                    </group>
                    <notebook>
                        <page string="课程描述">
                            <field name="description" placeholder="请输入课程描述"/>
                        </page>
                        <page string="关于">
                            开源学院为您提供丰富的开源框架学习
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="course_search_view">
        <field name="name">course.search</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="session_form_view">
        <field name="name">session.form</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <form string="课时表单">
                <sheet>
                    <group>
                        <group string="通用">
                            <field name="course_id"/>
                            <field name="name"/>
                            <field name="instructor_id"/>
                        </group>
                        <group string="计划">
                            <field name="start_date"/>
                            <field name="duration"/>
                            <field name="seats"/>
                        </group>
                        <group string="出席情况"></group>
                        <label for="attendee_ids"/>
                        <field name="attendee_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="session_tree_view">
        <field name="name">session.tree</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <tree string="Session Tree">
                <field name="name"/>
                <field name="course_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="course_tree_view">
        <field name="name">course.tree</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <tree string="课程列表">
                <field name="name"/>
                <field name="responsible_id"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="course_list_action">
        <field name="name">课程</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">创建您的第一个课程</p>
        </field>
    </record>

    <record model="ir.actions.act_window" id="session_list_action">
        <field name="name">课时</field>
        <field name="res_model">openacademy.session</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="main_openacademy_menu" name="学院"/>
    <menuitem id="openacademy_menu" name="开源学院" parent="main_openacademy_menu"/>
    <menuitem id="course_menu" name="课程" parent="openacademy_menu" action="course_list_action"/>
    <menuitem id="session_menu" name="课时"
              parent="openacademy_menu"
              action="session_list_action"/>


</odoo>